<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/but"
         android:gravity="center_horizontal"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             
             android:textAppearance="?android:attr/textAppearanceLarge" />

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/but1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="162dp"
            android:layout_height="162dp"
            android:src="@drawable/gnfl_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#E7E7E7"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="GNFL4.0 created by iTech"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#B1B1B1"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/but"
        android:gravity="bottom|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:shadowColor="#E7E7E7"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="DEVELOPER"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#A6A6A6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/but1"
        android:gravity="center"
        android:orientation="vertical" >
        

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:shadowColor="#E7E7E7"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="Android by 조우석"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#B1B1B1"
            android:textStyle="bold" />
        </LinearLayout>
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/but1"
        android:gravity="center"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:shadowColor="#E7E7E7"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="iOS by 김선엽"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#B1B1B1"
            android:textStyle="bold" />
        

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/but"
        android:gravity="bottom|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:shadowColor="#E7E7E7"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="SUPORTER"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#A6A6A6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/but1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:shadowColor="#E7E7E7"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="Article written by 가온길"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#B1B1B1"
            android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/but1"
            android:gravity="center"
            android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:shadowColor="#E7E7E7"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="Video made by COMMA"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#B1B1B1"
