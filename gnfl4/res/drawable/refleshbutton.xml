<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#87CEEB" />
            <stroke
                android:width="1dp"
                android:color="#87CEEB" />
            <corners
                android:radius="7dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00000000"
                android:endColor="#00000000"
                android:angle="270" />
            
            <corners
                android:radius="7dp" />
           
        </shape>
    </item>
</selector>